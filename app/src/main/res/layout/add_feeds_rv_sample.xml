<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feedsRVSample"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/ic_round_bg_1"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/posImage"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/main_icon_image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_placeholder_dark"
        tools:ignore="ImageContrastCheck" />

    <View
        android:id="@+id/view37"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#5D2A2E30"
        app:layout_constraintBottom_toBottomOf="@+id/posImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/posImage" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/main_icon_image"
        android:src="@drawable/ic_profile_default_image"
        app:civ_border_color="@color/activeRed"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view38"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#9A2A2E30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/posImage"
        app:layout_constraintStart_toStartOf="@+id/posImage"
        app:layout_constraintTop_toTopOf="@+id/comment" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/countLikes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingTop="4dp"
        android:text="@string/_0"
        android:textColor="@color/color_text_discuss"
        android:textSize="12sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic__like_icon"
        app:layout_constraintBottom_toBottomOf="@+id/posImage"
        app:layout_constraintStart_toStartOf="@+id/posImage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingTop="4dp"
        android:text="@string/_0"
        android:textColor="@color/color_text_discuss"
        android:textSize="12sp"
        app:drawableLeftCompat="@drawable/ic_watch_icon"
        app:layout_constraintStart_toEndOf="@+id/countLikes2"
        app:layout_constraintTop_toTopOf="@+id/countLikes2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingTop="4dp"
        android:text="@string/_0"
        android:textColor="@color/color_text_discuss"
        android:textSize="12sp"
        app:drawableLeftCompat="@drawable/ic_reply_white"
        app:layout_constraintStart_toEndOf="@+id/views"
        app:layout_constraintTop_toTopOf="@+id/views" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingTop="4dp"
        android:text="@string/_0"
        android:textColor="@color/color_text_discuss"
        android:textSize="12sp"
        app:drawableLeftCompat="@drawable/ic_share_white"
        app:layout_constraintStart_toEndOf="@+id/comment"
        app:layout_constraintTop_toTopOf="@+id/comment" />

</androidx.constraintlayout.widget.ConstraintLayout>